@{
    ViewData["Title"] = "Donor Dashboard";
    var userName = ViewBag.UserName ?? "Donor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    @if (TempData["Success"] != null)
    {
        <div class="alert-success-toast">@TempData["Success"]</div>
    }

    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                    <h2>Welfare Portal</h2>
                </div>
                <div class="user-info">
                    <div class="user-avatar">@userName.Substring(0, 1).ToUpper()</div>
                    <div class="user-details">
                        <p class="user-name">@userName</p>
                        <p class="user-role">Donor</p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="#" class="nav-item active" data-section="home">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Home
                </a>
                <a href="#" class="nav-item" data-section="personal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Personal Information
                </a>
                <a href="#" class="nav-item" data-section="donate">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                    Donate
                </a>
                <a href="@Url.Action("Logout", "UserLogin")" class="nav-item logout">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Logout
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Home Section -->
            <div class="content-section active" id="home-section">
                <div class="welcome-header">
                    <h1>Welcome, @userName!</h1>
                    <p>Thank you for being a part of our mission to help those in need.</p>
                </div>

                <div class="welfare-intro">
                    <div class="intro-card">
                        <div class="intro-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <h2>Our Mission</h2>
                        <p>We are dedicated to connecting generous donors like you with those who need support the most. Our welfare platform ensures transparency, efficiency, and direct impact in making a difference in people's lives.</p>
                    </div>

                    <div class="intro-card">
                        <div class="intro-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                        </div>
                        <h2>Why Donate?</h2>
                        <p>Your contributions help provide essential resources including food, education, healthcare, and shelter to families in need. Every donation, no matter the size, creates a ripple effect of positive change in our community.</p>
                    </div>

                    <div class="intro-card">
                        <div class="intro-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="M12 6v6l4 2"></path>
                            </svg>
                        </div>
                        <h2>Impact & Transparency</h2>
                        <p>We believe in complete transparency. Track your donations, see real-time updates on how your contributions are being used, and receive detailed reports on the impact you're making in the community.</p>
                    </div>
                </div>

                <div class="stats-container">
                    <div class="stat-card">
                        <h3>1,500+</h3>
                        <p>Families Helped</p>
                    </div>
                    <div class="stat-card">
                        <h3>500+</h3>
                        <p>Active Donors</p>
                    </div>
                    <div class="stat-card">
                        <h3>PKR 5M+</h3>
                        <p>Total Donations</p>
                    </div>
                    <div class="stat-card">
                        <h3>50+</h3>
                        <p>Partner NGOs</p>
                    </div>
                </div>
            </div>

            <!-- Personal Information Section -->
            <div class="content-section" id="personal-section">
                <h1>Personal Information</h1>
                <div class="info-container">
                    <div class="info-card">
                        <h3>Profile Details</h3>
                        <div class="info-row">
                            <label>Full Name:</label>
                            <span>@ViewBag.FullName</span>
                        </div>
                        <div class="info-row">
                            <label>User ID:</label>
                            <span>@ViewBag.UserId</span>
                        </div>
                        <div class="info-row">
                            <label>Email:</label>
                            <span>@ViewBag.Email</span>
                        </div>
                        <div class="info-row">
                            <label>Phone:</label>
                            <span>@ViewBag.Phone</span>
                        </div>
                        <div class="info-row">
                            <label>CNIC:</label>
                            <span>@ViewBag.CNIC</span>
                        </div>
                        <div class="info-row">
                            <label>Date of Birth:</label>
                            <span>@ViewBag.DateOfBirth</span>
                        </div>
                        <div class="info-row">
                            <label>Gender:</label>
                            <span>@ViewBag.Gender</span>
                        </div>
                        <div class="info-row">
                            <label>Address:</label>
                            <span>@ViewBag.Address</span>
                        </div>
                        <div class="info-row">
                            <label>City:</label>
                            <span>@ViewBag.City</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Donate Section -->
            <div class="content-section" id="donate-section">
                <h1>Make a Donation</h1>
                <div class="donate-container">
                    <form asp-action="ProcessDonation" asp-controller="Donation" method="post">
                        <div class="donation-card">
                            <h3>Choose Donation Type</h3>
                            <div class="donation-types">
                                <label class="donation-type-option">
                                    <input type="radio" name="DonationType" value="Money" required>
                                    <div class="option-content">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="12" y1="1" x2="12" y2="23"></line>
                                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                        </svg>
                                        <span>Money</span>
                                    </div>
                                </label>
                                <label class="donation-type-option">
                                    <input type="radio" name="DonationType" value="Food" required>
                                    <div class="option-content">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
                                            <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
                                            <line x1="6" y1="1" x2="6" y2="4"></line>
                                            <line x1="10" y1="1" x2="10" y2="4"></line>
                                            <line x1="14" y1="1" x2="14" y2="4"></line>
                                        </svg>
                                        <span>Food</span>
                                    </div>
                                </label>
                                <label class="donation-type-option">
                                    <input type="radio" name="DonationType" value="Clothes" required>
                                    <div class="option-content">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M20.38 3.46L16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23z"></path>
                                        </svg>
                                        <span>Clothes</span>
                                    </div>
                                </label>
                                <label class="donation-type-option">
                                    <input type="radio" name="DonationType" value="Other" required>
                                    <div class="option-content">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                                            <line x1="12" y1="22.08" x2="12" y2="12"></line>
                                        </svg>
                                        <span>Other</span>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="donation-card">
                            <h3>Donation Details</h3>
                            <div class="input-group">
                                <label>Amount / Quantity</label>
                                <input type="text" name="Amount" placeholder="Enter amount or quantity" required>
                            </div>
                            <div class="input-group">
                                <label>Description (Optional)</label>
                                <textarea name="Description" rows="4" placeholder="Add any additional details about your donation"></textarea>
                            </div>
                        </div>

                        <button type="submit" class="donate-btn">Submit Donation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-item:not(.logout)');
            const sections = document.querySelectorAll('.content-section');

            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Remove active class from all nav items and sections
                    navItems.forEach(nav => nav.classList.remove('active'));
                    sections.forEach(section => section.classList.remove('active'));

                    // Add active class to clicked nav item
                    this.classList.add('active');

                    // Show corresponding section
                    const sectionId = this.dataset.section + '-section';
                    document.getElementById(sectionId).classList.add('active');

                    // Scroll to top of content
                    document.querySelector('.main-content').scrollTop = 0;
                });
            });

            // Auto-hide success toast after 5 seconds
            const successToast = document.querySelector('.alert-success-toast');
            if (successToast) {
                setTimeout(() => {
                    successToast.remove();
                }, 5000);
            }
        });
    </script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Poppins", sans-serif;
            background: #f5f7fa;
            overflow: hidden;
        }

        /* Success Toast Notification */
        .alert-success-toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #00b09b, #96c93d);
            color: white;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 176, 155, 0.3);
            z-index: 9999;
            animation: slideInRight 0.4s ease-out, fadeOut 0.3s ease-in 4.7s forwards;
            font-weight: 500;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(400px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes fadeOut {
            to {
                opacity: 0;
                transform: translateX(400px);
            }
        }

        .dashboard-wrapper {
            display: flex;
            height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            flex-direction: column;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 25px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
        }

            .logo svg {
                fill: white;
            }

            .logo h2 {
                font-size: 20px;
                font-weight: 600;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: 600;
        }

        .user-details {
            flex: 1;
        }

        .user-name {
            font-size: 15px;
            font-weight: 600;
        }

        .user-role {
            font-size: 12px;
            opacity: 0.8;
        }

        .sidebar-nav {
            flex: 1;
            padding: 20px 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 25px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s;
            font-size: 15px;
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background: rgba(255, 255, 255, 0.1);
                color: white;
                border-left-color: white;
            }

            .nav-item.active {
                background: rgba(255, 255, 255, 0.15);
                color: white;
                border-left-color: white;
                font-weight: 600;
            }

            .nav-item.logout {
                margin-top: auto;
                color: #ffcccb;
            }

                .nav-item.logout:hover {
                    background: rgba(255, 0, 0, 0.1);
                    border-left-color: #ffcccb;
                }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
            background: #f5f7fa;
        }

        .content-section {
            display: none;
        }

            .content-section.active {
                display: block;
                animation: fadeIn 0.4s ease;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .welcome-header {
            margin-bottom: 40px;
        }

            .welcome-header h1 {
                font-size: 32px;
                color: #2d3436;
                margin-bottom: 8px;
            }

            .welcome-header p {
                font-size: 16px;
                color: #636e72;
            }

        .welfare-intro {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .intro-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .intro-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            }

        .intro-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

            .intro-icon svg {
                stroke: white;
            }

        .intro-card h2 {
            font-size: 22px;
            color: #2d3436;
            margin-bottom: 15px;
        }

        .intro-card p {
            color: #636e72;
            line-height: 1.6;
            font-size: 14px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

            .stat-card h3 {
                font-size: 36px;
                margin-bottom: 8px;
            }

            .stat-card p {
                font-size: 14px;
                opacity: 0.9;
            }

        /* Personal Information Styles */
        .info-container {
            max-width: 800px;
        }

        .info-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

            .info-card h3 {
                font-size: 22px;
                color: #2d3436;
                margin-bottom: 25px;
                padding-bottom: 15px;
                border-bottom: 2px solid #f0f0f0;
            }

        .info-row {
            display: flex;
            padding: 15px 0;
            border-bottom: 1px solid #f5f5f5;
        }

            .info-row:last-child {
                border-bottom: none;
            }

            .info-row label {
                font-weight: 600;
                color: #2d3436;
                width: 180px;
                flex-shrink: 0;
            }

            .info-row span {
                color: #636e72;
            }

        /* Donation Styles */
        .donate-container {
            max-width: 800px;
        }

        .donation-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
        }

            .donation-card h3 {
                font-size: 20px;
                color: #2d3436;
                margin-bottom: 20px;
            }

        .donation-types {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .donation-type-option {
            cursor: pointer;
        }

            .donation-type-option input[type="radio"] {
                display: none;
            }

        .option-content {
            padding: 20px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            text-align: center;
            transition: all 0.3s;
        }

            .option-content svg {
                stroke: #636e72;
                margin-bottom: 10px;
                transition: all 0.3s;
            }

            .option-content span {
                display: block;
                font-weight: 500;
                color: #636e72;
                transition: all 0.3s;
            }

        .donation-type-option input[type="radio"]:checked + .option-content {
            border-color: #667eea;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        }

            .donation-type-option input[type="radio"]:checked + .option-content svg {
                stroke: #667eea;
            }

            .donation-type-option input[type="radio"]:checked + .option-content span {
                color: #667eea;
                font-weight: 600;
            }

        .option-content:hover {
            border-color: #667eea;
            transform: translateY(-3px);
        }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group label {
                display: block;
                font-size: 14px;
                font-weight: 500;
                color: #2d3436;
                margin-bottom: 8px;
            }

            .input-group input,
            .input-group textarea {
                width: 100%;
                padding: 12px 15px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 15px;
                font-family: "Poppins", sans-serif;
                transition: border-color 0.3s;
            }

                .input-group input:focus,
                .input-group textarea:focus {
                    outline: none;
                    border-color: #667eea;
                }

        .donate-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .donate-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .dashboard-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
            }

            .main-content {
                padding: 20px;
            }

            .welfare-intro {
                grid-template-columns: 1fr;
            }
        }
    </style>
</body>
</html>