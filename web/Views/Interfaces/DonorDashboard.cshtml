@{
    ViewData["Title"] = "Donor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .welcome-text h1 {
            color: #667eea;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .welcome-text p {
            color: #666;
        }

        .logout-btn {
            background: #f44336;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s;
        }

            .logout-btn:hover {
                background: #d32f2f;
            }

        .tabs-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .tabs {
            display: flex;
            background: #f5f5f5;
            border-bottom: 2px solid #e0e0e0;
        }

        .tab {
            flex: 1;
            padding: 18px;
            text-align: center;
            cursor: pointer;
            background: #f5f5f5;
            border: none;
            font-size: 16px;
            font-weight: 600;
            color: #666;
            transition: all 0.3s;
        }

            .tab.active {
                background: white;
                color: #667eea;
                border-bottom: 3px solid #667eea;
            }

            .tab:hover {
                background: #eeeeee;
            }

        .tab-content {
            display: none;
            padding: 30px;
            animation: fadeIn 0.3s;
        }

            .tab-content.active {
                display: block;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .profile-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .profile-item {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }

            .profile-item label {
                display: block;
                color: #666;
                font-size: 13px;
                margin-bottom: 5px;
                font-weight: 600;
            }

            .profile-item span {
                display: block;
                color: #333;
                font-size: 16px;
            }

        .donation-form {
            max-width: 600px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 600;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
                padding: 12px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 15px;
                transition: border 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: #667eea;
                }

        .people-selector {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .people-btn {
            padding: 12px 20px;
            border: 2px solid #667eea;
            background: white;
            color: #667eea;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .people-btn:hover {
                background: #667eea;
                color: white;
            }

            .people-btn.selected {
                background: #667eea;
                color: white;
            }

        .clothes-categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .category-card {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .category-card:hover {
                border-color: #667eea;
                background: #f5f7ff;
            }

            .category-card.selected {
                border-color: #667eea;
                background: #667eea;
                color: white;
            }

            .category-card .icon {
                font-size: 40px;
                margin-bottom: 10px;
            }

        .submit-btn {
            background: #667eea;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: background 0.3s;
        }

            .submit-btn:hover {
                background: #5568d3;
            }

        .history-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .history-table th,
            .history-table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #e0e0e0;
            }

            .history-table th {
                background: #f5f5f5;
                color: #333;
                font-weight: 600;
            }

            .history-table tr:hover {
                background: #f9f9f9;
            }

        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .status-completed {
            background: #4caf50;
            color: white;
        }

        .status-pending {
            background: #ff9800;
            color: white;
        }

        .no-history {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .quantity-input {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .quantity-input button {
                width: 40px;
                height: 40px;
                border: 2px solid #667eea;
                background: white;
                color: #667eea;
                border-radius: 8px;
                font-size: 20px;
                cursor: pointer;
                transition: all 0.3s;
            }

                .quantity-input button:hover {
                    background: #667eea;
                    color: white;
                }

            .quantity-input input {
                width: 80px;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <div class="header">
            <div class="welcome-text">
                <h1>Welcome, @ViewBag.FullName!</h1>
                <p>Make a difference today with your generous donation</p>
            </div>
            <a href="@Url.Action("Logout", "UserLogin")" class="logout-btn">Logout</a>
        </div>

        <!-- Tabs Container -->
        <div class="tabs-container">
            <div class="tabs">
                <button class="tab active" onclick="openTab(event, 'profile')">My Profile</button>
                <button class="tab" onclick="openTab(event, 'food')">Donate Food</button>
                <button class="tab" onclick="openTab(event, 'clothes')">Donate Clothes</button>
                <button class="tab" onclick="openTab(event, 'money')">Donate Money</button>
                <button class="tab" onclick="openTab(event, 'history')">Donation History</button>
            </div>

            <!-- Profile Tab -->
            <div id="profile" class="tab-content active">
                <h2 style="margin-bottom: 25px; color: #667eea;">Your Profile Information</h2>
                <div class="profile-grid">
                    <div class="profile-item">
                        <label>User ID</label>
                        <span>@ViewBag.UserId</span>
                    </div>
                    <div class="profile-item">
                        <label>Full Name</label>
                        <span>@ViewBag.FullName</span>
                    </div>
                    <div class="profile-item">
                        <label>Email</label>
                        <span>@ViewBag.Email</span>
                    </div>
                    <div class="profile-item">
                        <label>Phone</label>
                        <span>@ViewBag.Phone</span>
                    </div>
                    <div class="profile-item">
                        <label>CNIC</label>
                        <span>@ViewBag.CNIC</span>
                    </div>
                    <div class="profile-item">
                        <label>Date of Birth</label>
                        <span>@ViewBag.DateOfBirth</span>
                    </div>
                    <div class="profile-item">
                        <label>Gender</label>
                        <span>@ViewBag.Gender</span>
                    </div>
                    <div class="profile-item">
                        <label>City</label>
                        <span>@ViewBag.City</span>
                    </div>
                    <div class="profile-item" style="grid-column: 1 / -1;">
                        <label>Address</label>
                        <span>@ViewBag.Address</span>
                    </div>
                </div>
            </div>

            <!-- Food Donation Tab -->
            <div id="food" class="tab-content">
                <h2 style="margin-bottom: 25px; color: #667eea;">Donate Food</h2>
                <form asp-action="DonateFoodAction" asp-controller="Interfaces" method="post" class="donation-form">
                    <div class="form-group">
                        <label>Number of People to Feed *</label>
                        <div class="people-selector">
                            <button type="button" class="people-btn" onclick="selectPeople(1)">1 Person</button>
                            <button type="button" class="people-btn" onclick="selectPeople(2)">2 People</button>
                            <button type="button" class="people-btn" onclick="selectPeople(3)">3 People</button>
                            <button type="button" class="people-btn" onclick="selectPeople(4)">4 People</button>
                            <button type="button" class="people-btn" onclick="selectPeople(5)">5 People</button>
                            <button type="button" class="people-btn" onclick="selectPeople(10)">10 People</button>
                            <button type="button" class="people-btn" onclick="selectPeople(20)">20+ People</button>
                        </div>
                        <input type="hidden" id="numberOfPeople" name="NumberOfPeople" required>
                    </div>

                    <div class="form-group">
                        <label>Food Type *</label>
                        <select name="FoodType" required>
                            <option value="">Select food type</option>
                            <option value="Cooked Meals">Cooked Meals</option>
                            <option value="Raw Ingredients">Raw Ingredients (Rice, Flour, etc.)</option>
                            <option value="Packaged Food">Packaged Food</option>
                            <option value="Fruits & Vegetables">Fruits & Vegetables</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="Description" rows="4" placeholder="Provide details about the food items..."></textarea>
                    </div>

                    <div class="form-group">
                        <label>Pickup Location *</label>
                        <input type="text" name="PickupLocation" required placeholder="Enter pickup address">
                    </div>

                    <div class="form-group">
                        <label>Preferred Pickup Date & Time *</label>
                        <input type="datetime-local" name="PickupDateTime" required>
                    </div>

                    <button type="submit" class="submit-btn">Submit Food Donation</button>
                </form>
            </div>

            <!-- Clothes Donation Tab -->
            <div id="clothes" class="tab-content">
                <h2 style="margin-bottom: 25px; color: #667eea;">Donate Clothes</h2>
                <form asp-action="DonateClothesAction" asp-controller="Interfaces" method="post" class="donation-form">
                    <div class="form-group">
                        <label>Select Category *</label>
                        <div class="clothes-categories">
                            <div class="category-card" onclick="selectCategory('Kids')">
                                <div class="icon">👶</div>
                                <div>Kids Clothes</div>
                            </div>
                            <div class="category-card" onclick="selectCategory('Male')">
                                <div class="icon">👔</div>
                                <div>Male Clothes</div>
                            </div>
                            <div class="category-card" onclick="selectCategory('Female')">
                                <div class="icon">👗</div>
                                <div>Female Clothes</div>
                            </div>
                        </div>
                        <input type="hidden" id="clothesCategory" name="Category" required>
                    </div>

                    <div class="form-group">
                        <label>Quantity (Number of Items) *</label>
                        <div class="quantity-input">
                            <button type="button" onclick="changeQuantity(-1)">-</button>
                            <input type="number" id="clothesQuantity" name="Quantity" value="1" min="1" required>
                            <button type="button" onclick="changeQuantity(1)">+</button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Condition *</label>
                        <select name="Condition" required>
                            <option value="">Select condition</option>
                            <option value="New">New</option>
                            <option value="Like New">Like New</option>
                            <option value="Good">Good</option>
                            <option value="Fair">Fair</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Clothes Type *</label>
                        <select name="ClothesType" required>
                            <option value="">Select type</option>
                            <option value="Winter">Winter</option>
                            <option value="Summer">Summer</option>
                            <option value="Formal">Formal</option>
                            <option value="Casual">Casual</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="Description" rows="4" placeholder="Describe the clothes (sizes, colors, types, etc.)..."></textarea>
                    </div>

                    <div class="form-group">
                        <label>Pickup Location *</label>
                        <input type="text" name="PickupLocation" required placeholder="Enter pickup address">
                    </div>

                    <div class="form-group">
                        <label>Preferred Pickup Date & Time *</label>
                        <input type="datetime-local" name="PickupDateTime" required>
                    </div>

                    <button type="submit" class="submit-btn">Submit Clothes Donation</button>
                </form>
            </div>

            <!-- Money Donation Tab -->
            <div id="money" class="tab-content">
                <h2 style="margin-bottom: 25px; color: #667eea;">Donate Money</h2>
                <form asp-action="DonateMoneyAction" asp-controller="Interfaces" method="post" class="donation-form">
                    <div class="form-group">
                        <label>Amount (PKR) *</label>
                        <input type="number" name="Amount" min="100" required placeholder="Enter amount">
                    </div>

                    <div class="form-group">
                        <label>Donation Purpose *</label>
                        <select name="Purpose" required>
                            <option value="">Select purpose</option>
                            <option value="General">General Welfare</option>
                            <option value="Education">Education</option>
                            <option value="Healthcare">Healthcare</option>
                            <option value="Emergency Relief">Emergency Relief</option>
                            <option value="Food Support">Food Support</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Payment Method *</label>
                        <select name="PaymentMethod" required>
                            <option value="">Select payment method</option>
                            <option value="Bank Transfer">Bank Transfer</option>
                            <option value="Credit Card">Credit Card</option>
                            <option value="Debit Card">Debit Card</option>
                            <option value="Mobile Wallet">Mobile Wallet (JazzCash/Easypaisa)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Comments (Optional)</label>
                        <textarea name="Comments" rows="3" placeholder="Any special instructions or dedication..."></textarea>
                    </div>

                    <button type="submit" class="submit-btn">Proceed to Payment</button>
                </form>
            </div>

            <!-- Donation History Tab -->
            <div id="history" class="tab-content">
                <h2 style="margin-bottom: 25px; color: #667eea;">Your Donation History</h2>

                @* This section will be populated from the database *@
                @if (ViewBag.DonationHistory != null && ((List<dynamic>)ViewBag.DonationHistory).Count > 0)
                {
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donation in (List<dynamic>)ViewBag.DonationHistory)
                            {
                                <tr>
                                    <td>@donation.Date</td>
                                    <td>@donation.Type</td>
                                    <td>@donation.Description</td>
                                    <td><span class="status-badge status-@donation.Status.ToLower()">@donation.Status</span></td>
                                    <td>@donation.Details</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-history">
                        <p style="font-size: 18px; margin-bottom: 10px;">📦 No donations yet</p>
                        <p>Start making a difference by donating food, clothes, or money!</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function openTab(evt, tabName) {
            var i, tabcontent, tabs;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].classList.remove("active");
            }
            tabs = document.getElementsByClassName("tab");
            for (i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove("active");
            }
            document.getElementById(tabName).classList.add("active");
            evt.currentTarget.classList.add("active");
        }

        function selectPeople(number) {
            // Remove selected class from all buttons
            var buttons = document.querySelectorAll('.people-btn');
            buttons.forEach(btn => btn.classList.remove('selected'));

            // Add selected class to clicked button
            event.target.classList.add('selected');

            // Set the hidden input value
            document.getElementById('numberOfPeople').value = number;
        }

        function selectCategory(category) {
            // Remove selected class from all cards
            var cards = document.querySelectorAll('.category-card');
            cards.forEach(card => card.classList.remove('selected'));

            // Add selected class to clicked card
            event.target.closest('.category-card').classList.add('selected');

            // Set the hidden input value
            document.getElementById('clothesCategory').value = category;
        }

        function changeQuantity(delta) {
            var input = document.getElementById('clothesQuantity');
            var currentValue = parseInt(input.value) || 1;
            var newValue = currentValue + delta;
            if (newValue >= 1) {
                input.value = newValue;
            }
        }
    </script>
</body>
</html>