<div id="profile" class="content-card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 class="content-title" style="margin-bottom: 0;">Your Profile Information</h2>
        <button type="button" class="submit-btn" onclick="toggleEditMode()" id="editToggleBtn">
            ✏️ Edit Profile
        </button>
    </div>

    <!-- View Mode -->
    <div id="profileViewMode">
        <div class="profile-grid">
            <div class="profile-item">
                <label>User ID</label>
                <span>@ViewBag.UserId</span>
            </div>
            <div class="profile-item">
                <label>Full Name</label>
                <span id="viewFullName">@ViewBag.FullName</span>
            </div>
            <div class="profile-item">
                <label>Email</label>
                <span id="viewEmail">@ViewBag.Email</span>
            </div>
            <div class="profile-item">
                <label>Phone</label>
                <span id="viewPhone">@ViewBag.Phone</span>
            </div>
            <div class="profile-item">
                <label>CNIC</label>
                <span>@ViewBag.CNIC</span>
            </div>
            <div class="profile-item">
                <label>Date of Birth</label>
                <span>@ViewBag.DateOfBirth</span>
            </div>
            <div class="profile-item">
                <label>Gender</label>
                <span>@ViewBag.Gender</span>
            </div>
            <div class="profile-item">
                <label>City</label>
                <span id="viewCity">@ViewBag.City</span>
            </div>
            <div class="profile-item" style="grid-column: 1 / -1;">
                <label>Address</label>
                <span id="viewAddress">@ViewBag.Address</span>
            </div>
        </div>
    </div>

    <!-- Edit Mode -->
    <div id="profileEditMode" style="display: none;">
        <form action="/DonorDashboard/UpdateProfile" method="post" class="donation-form" id="profileUpdateForm">
            <div class="form-group">
                <label>Full Name *</label>
                <input type="text" name="FullName" id="editFullName" value="@ViewBag.FullName" required />
            </div>

            <div class="form-group">
                <label>Email *</label>
                <input type="email" name="Email" id="editEmail" value="@ViewBag.Email" required />
            </div>

            <div class="form-group">
                <label>Phone *</label>
                <input type="tel" name="Phone" id="editPhone" value="@ViewBag.Phone" required pattern="[0-9]{11}" placeholder="03001234567" />
                <small style="color: var(--muted); font-size: 12px;">Format: 11 digits (e.g., 03001234567)</small>
            </div>

            <div class="form-group">
                <label>City *</label>
                <input type="text" name="City" id="editCity" value="@ViewBag.City" required />
            </div>

            <div class="form-group">
                <label>Address *</label>
                <textarea name="Address" id="editAddress" rows="3" required>@ViewBag.Address</textarea>
            </div>

            <div style="display: flex; gap: 10px;">
                <button type="submit" class="submit-btn">💾 Save Changes</button>
                <button type="button" class="cancel-btn" onclick="toggleEditMode()">❌ Cancel</button>
            </div>
        </form>
    </div>
</div>

<style>
    .cancel-btn {
        background: transparent;
        color: var(--muted);
        padding: 12px 18px;
        border-radius: 10px;
        border: 2px solid #D6E9EA;
        cursor: pointer;
        font-weight: 700;
        font-size: 15px;
        transition: all 0.3s;
    }

        .cancel-btn:hover {
            background: rgba(102, 126, 234, 0.05);
            border-color: #667eea;
        }
</style>

<script>
    function toggleEditMode() {
        const viewMode = document.getElementById('profileViewMode');
        const editMode = document.getElementById('profileEditMode');
        const toggleBtn = document.getElementById('editToggleBtn');

        if (viewMode.style.display === 'none') {
            // Switch to view mode
            viewMode.style.display = 'block';
            editMode.style.display = 'none';
            toggleBtn.innerHTML = '✏️ Edit Profile';
        } else {
            // Switch to edit mode
            viewMode.style.display = 'none';
            editMode.style.display = 'block';
            toggleBtn.innerHTML = '👁️ View Profile';
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('profileUpdateForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                const phone = document.getElementById('editPhone').value;
                if (phone.length !== 11 || !/^\d+$/.test(phone)) {
                    e.preventDefault();
                    alert('Phone number must be exactly 11 digits');
                    return false;
                }
                console.log('Profile update form submitting...');
                return true;
            });
        }
    });
</script>