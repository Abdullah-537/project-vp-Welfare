<div id="loan" class="content-card">
    <h2 class="content-title">Request Financial Assistance</h2>
    <form action="@Url.Action("RequestLoan", "Receiver")" method="post" class="request-form" id="loanRequestForm">
        <div class="form-group">
            <label class="label-money">Loan Amount (PKR) *</label>
            <input type="number" name="Amount" id="loanAmount" min="100" step="100" required placeholder="Enter amount (minimum PKR 100)" />
        </div>

        <div class="form-group">
            <label class="label-type">Loan Purpose *</label>
            <select name="LoanPurpose" id="loanPurpose" required>
                <option value="">Select Purpose</option>
                <option value="Education">Education</option>
                <option value="Medical">Medical Treatment</option>
                <option value="Business">Small Business</option>
                <option value="Emergency">Emergency</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="form-group">
            <label class="label-duration">Repayment Period (Months) *</label>
            <input type="number" name="RepaymentMonths" id="repaymentMonths" min="1" max="36" required placeholder="Number of months to repay" />
        </div>

        <div class="form-group">
            <label class="label-reason">Detailed Explanation *</label>
            <textarea name="Description" rows="4" required placeholder="Explain why you need this loan and how you plan to use it..."></textarea>
        </div>

        <button type="submit" class="submit-btn">Submit Loan Request</button>
    </form>
</div>