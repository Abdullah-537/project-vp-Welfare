<div id="clothes" class="content-card">
    <h2 class="content-title">Request Clothes Assistance</h2>
    <form action="@Url.Action("RequestClothes", "Receiver")" method="post" class="request-form" id="clothesRequestForm">
        <div class="form-group">
            <label>Male Clothes</label>
            <div class="quantity-input">
                <button type="button" class="male-qty-minus">-</button>
                <input type="number" name="MaleQuantity" id="maleClothes" value="0" min="0" />
                <button type="button" class="male-qty-plus">+</button>
            </div>
            <small style="color: var(--muted); font-size: 12px;">Available: @ViewBag.MaleClothes items</small>
        </div>

        <div class="form-group">
            <label>Female Clothes</label>
            <div class="quantity-input">
                <button type="button" class="female-qty-minus">-</button>
                <input type="number" name="FemaleQuantity" id="femaleClothes" value="0" min="0" />
                <button type="button" class="female-qty-plus">+</button>
            </div>
            <small style="color: var(--muted); font-size: 12px;">Available: @ViewBag.FemaleClothes items</small>
        </div>

        <div class="form-group">
            <label>Kids Clothes</label>
            <div class="quantity-input">
                <button type="button" class="kids-qty-minus">-</button>
                <input type="number" name="KidsQuantity" id="kidsClothes" value="0" min="0" />
                <button type="button" class="kids-qty-plus">+</button>
            </div>
            <small style="color: var(--muted); font-size: 12px;">Available: @ViewBag.KidsClothes items</small>
        </div>

        <div class="form-group">
            <label>Clothes Type *</label>
            <select name="ClothesType" id="clothesType" required>
                <option value="">Select Type</option>
                <option value="Winter">Winter</option>
                <option value="Summer">Summer</option>
                <option value="Formal">Formal</option>
                <option value="Casual">Casual</option>
            </select>
        </div>

        <div class="form-group">
            <label>Additional Details (Optional)</label>
            <textarea name="Description" rows="3" placeholder="Specify sizes or any special requirements..."></textarea>
        </div>

        <button type="submit" class="submit-btn">Submit Clothes Request</button>
    </form>
</div>