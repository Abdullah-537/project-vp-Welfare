<div id="food" class="content-card">
    <h2 class="content-title">Request Food Assistance</h2>
    <form action="@Url.Action("RequestFood", "Receiver")" method="post" class="request-form" id="foodRequestForm">
        <div class="form-group">
            <label>Number of Family Members *</label>
            <input type="number" name="FamilyMembers" id="familyMembers" min="1" required placeholder="Enter number of family members" />
        </div>

        <div class="form-group">
            <label>Food Quantity (Units) *</label>
            <div class="quantity-input">
                <button type="button" class="food-qty-btn-minus">-</button>
                <input type="number" name="FoodQuantity" id="foodQuantity" value="1" min="1" required />
                <button type="button" class="food-qty-btn-plus">+</button>
            </div>
            <small style="color: var(--muted); font-size: 12px;">Available: @ViewBag.FoodAvailable units</small>
        </div>

        <div class="form-group">
            <label>Additional Details (Optional)</label>
            <textarea name="Description" rows="3" placeholder="Describe your situation or any specific needs..."></textarea>
        </div>

        <button type="submit" class="submit-btn">Submit Food Request</button>
    </form>
</div>